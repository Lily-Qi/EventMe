<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="8dp"
                android:text="@string/backicon"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/recyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/currentcardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="411dp"
                        android:layout_height="230dp"
                        android:id="@+id/currentevent">

                        <ImageView
                            android:id="@+id/currenteventImage"
                            android:layout_width="150dp"
                            android:layout_height="230dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/currenteventName"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Title"
                            android:textSize="18sp"
                            android:gravity="left"
                            app:layout_constraintBottom_toTopOf="@+id/currenteventLocation"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/currenteventImage"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/currenteventLocation"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Location: "
                            android:textSize="12sp"
                            android:gravity="left"
                            app:layout_constraintBottom_toTopOf="@+id/currenteventTime"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/currenteventImage" />

                        <TextView
                            android:id="@+id/currenteventDate"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Date"
                            android:textSize="15sp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeMinTextSize="7sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            app:layout_constraintBottom_toTopOf="@+id/currenteventCost"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/currenteventImage" />

                        <TextView
                            android:id="@+id/currenteventTime"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Time"
                            android:textSize="15sp"
                            android:gravity="left"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintBottom_toTopOf="@+id/currenteventDate"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/currenteventImage" />

                        <TextView
                            android:id="@+id/currenteventCost"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Cost"
                            android:textSize="15sp"
                            android:gravity="left"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintBottom_toTopOf="@+id/currentsponceringOrganization"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/currenteventImage" />

                        <TextView
                            android:id="@+id/currentsponceringOrganization"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Sponsoring Organization"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="15dp"
                            android:textSize="15sp"
                            android:gravity="left"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/currenteventImage" />
                        <TextView
                            android:id="@+id/currentdistance"
                            android:layout_width="104dp"
                            android:layout_height="21dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="193dp"
                            android:layout_marginEnd="272dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/montserrat_black"
                            android:gravity="left"
                            android:text="distance"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/currenteventImage"
                            app:layout_constraintTop_toTopOf="@+id/currenteventImage"
                            app:layout_constraintVertical_bias="1.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="409dp"
                android:layout_height="323dp"
                android:layout_marginBottom="83dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>